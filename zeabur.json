{
  "build": {
    "buildCommand": "pip install -r requirements.txt",
    "startCommand": "python app.py"
  },
  "deploy": {
    "port": 8000,
    "healthCheckPath": "/health"
  },
  "env": {
    "FLASK_ENV": "production",
    "SECRET_KEY": {
      "type": "secret",
      "description": "Flask应用密钥"
    },
    "MINERU_API_TOKEN": {
      "type": "secret",
      "description": "MinerU API Token（可选）"
    },
    "DEEPLX_API_URL": {
      "type": "secret",
      "description": "DeepLX API URL（可选）"
    },
    "AI_TRANSLATE_API_URL": {
      "type": "secret",
      "description": "AI翻译API URL（可选）"
    },
    "AI_TRANSLATE_API_KEY": {
      "type": "secret",
      "description": "AI翻译API Key（可选）"
    },
    "AI_TRANSLATE_MODEL": {
      "type": "secret",
      "description": "AI模型名称（可选）"
    }
  }
}